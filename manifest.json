{
  "manifest_version": 3,
  "name": "Prompt Manager",
  "version": "0.1.0",
  "description": "Starter template for experimenting with prompt management ideas.",
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "options_page": "html/options.html"
}
